        "responses": {
          "201": {
            "description": ""
          }
        },
        "summary": "로그인",
        "tags": [
          "Auth"
        ]
      }
    },
    "/api/auth/me": {
      "get": {
        "description": "인증된 사용자의 정보를 조회",
        "operationId": "AuthController_getMe",
        "parameters": [],
        "responses": {
          "200": {
            "description": ""
          }
        },
        "security": [
          {
            "bearer": []
          }
        ],
        "summary": "현재 사용자 정보 조회",
        "tags": [
          "Auth"
        ]
      }
    },
    "/api/auth/logout": {
      "post": {
        "description": "현재 세션 로그아웃",
        "operationId": "AuthController_logout",
        "parameters": [],
