          "201": {
            "description": ""
          }
        },
        "security": [
          {
            "bearer": []
          }
        ],
        "summary": "로그아웃",
        "tags": [
          "Auth"
        ]
      }
    },
    "/api/profiles/me": {
      "get": {
        "description": "현재 사용자의 프로필 정보 조회",
        "operationId": "ProfilesController_getMyProfile",
        "parameters": [],
        "responses": {
          "200": {
            "description": ""
          }
        },
        "security": [
          {
            "bearer": []
          }
        ],
        "summary": "내 프로필 조회",
        "tags": [
          "Profiles"
        ]
      },
      "put": {
        "description": "현재 사용자의 프로필 정보 수정",
        "operationId": "ProfilesController_updateMyProfile",
        "parameters": [],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/UpdateProfileDto"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": ""
          }
        },
        "security": [
          {
            "bearer": []
          }
        ],
        "summary": "내 프로필 수정",
        "tags": [
          "Profiles"
        ]
      }
    },
    "/api/health": {
      "get": {
        "description": "서버 상태 확인",
        "operationId": "HealthController_check",
        "parameters": [],
        "responses": {
          "200": {
            "description": ""
          }
        },
        "summary": "헬스 체크",
        "tags": [
          "Health"
        ]
      }
    },
    "/api/jlpt-voca": {
      "get": {
        "description": "레벨별 단어 목록 조회 및 검색 (search, word, meaning, meaning_ko)",
        "operationId": "JlptVocaController_list",
        "parameters": [
          {
            "name": "level",
            "required": false,
            "in": "query",
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "page",
            "required": false,
            "in": "query",
            "schema": {
              "minimum": 1,
              "type": "number"
            }
          },
          {
            "name": "limit",
            "required": false,
            "in": "query",
            "schema": {
              "minimum": 1,
              "maximum": 200,
              "type": "number"
            }
          },
          {
            "name": "search",
            "required": false,
            "in": "query",
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "word",
            "required": false,
            "in": "query",
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "meaning",
            "required": false,
            "in": "query",
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "meaning_ko",
            "required": false,
            "in": "query",
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": ""
          }
        },
        "summary": "JLPT 단어 목록 조회",
        "tags": [
          "JLPT Vocabulary"
        ]
      }
    },
    "/api/jlpt-voca/random": {
      "get": {
        "description": "레벨별 또는 전체에서 랜덤으로 단어 1개 조회",
        "operationId": "JlptVocaController_random",
        "parameters": [
          {
            "name": "level",
            "required": false,
            "in": "query",
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object"
                }
              }
            }
          }
        },
        "summary": "랜덤 단어 조회",
        "tags": [
          "JLPT Vocabulary"
        ]
      }
    },
    "/api/jlpt-voca/word": {
      "get": {
        "description": "word 필드가 정확히 일치하는 단어 조회",
        "operationId": "JlptVocaController_findByWordExact",
        "parameters": [
          {
            "name": "search",
            "required": false,
            "in": "query",
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object"
                }
              }
            }
          }
        },
        "summary": "단어 정확히 일치 검색",
        "tags": [
          "JLPT Vocabulary"
        ]
      }
    }
  },
  "info": {
    "title": "JLPT Vocabulary API",
    "description": "JLPT 단어 학습을 위한 API 문서",
    "version": "1.0",
    "contact": {}
  },
  "tags": [
    {
      "name": "Auth",
      "description": "인증 관련 API (회원가입, 로그인, 로그아웃)"
    },
    {
      "name": "Profiles",
      "description": "사용자 프로필 관리 API"
    },
    {
      "name": "JLPT Vocabulary",
      "description": "JLPT 단어 조회 및 검색 API"
    },
    {
      "name": "Health",
      "description": "서버 상태 확인 API"
    }
  ],
  "servers": [
    {
      "url": "https://jlpt-voca-server.vercel.app",
      "description": "Production"
    },
    {
      "url": "http://localhost:3000",
      "description": "Local"
    }
  ],
  "components": {
    "securitySchemes": {
      "bearer": {
        "scheme": "bearer",
        "bearerFormat": "JWT",
        "type": "http"
      }
    },
    "schemas": {
      "SignUpDto": {
        "type": "object",
        "properties": {
          "email": {
            "type": "string",
            "format": "email"
          },
          "password": {
            "type": "string",
            "minLength": 6
          }
        },
        "required": [
          "email",
          "password"
        ]
      },
      "SignInDto": {
        "type": "object",
        "properties": {
          "email": {
            "type": "string",
            "format": "email"
          },
          "password": {
            "type": "string"
          }
        },
        "required": [
          "email",
          "password"
        ]
      },
      "UpdateProfileDto": {
        "type": "object",
        "properties": {
          "username": {
            "type": "string",
            "maxLength": 80
          },
          "fullName": {
            "type": "string",
            "maxLength": 120
          },
          "avatarUrl": {
            "type": "string",
            "format": "uri"
          }
        }
      }
    }
  }
}